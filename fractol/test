void	ft_redraw(t_all *all)
{
	mlx_destroy_image(all->mlx.mlx_ptr, all->mlx.img_ptr);
	all->mlx.img_ptr = mlx_new_image(all->mlx.mlx_ptr, all->mlx.x_size,
	all->mlx.y_size);
	all->mlx.img_addr = mlx_get_data_addr(all->mlx.img_ptr, &all->mlx.bpp,
	&all->mlx.size_line, &all->mlx.endian);
	ft_fractal_choice(all);
	mlx_put_image_to_window(all->mlx.mlx_ptr, all->mlx.win_ptr,
	all->mlx.img_ptr, 0, 0);
}

int		ft_motion_hook(int x, int y, t_all *all)
{
	if (x < all->mlx.x_size && y < all->mlx.y_size && all->key.act_mouse == 1)
	{
		all->par.c_r = (x < all->mlx.x_size / 2) ? (all->par.c_r + 0.01) :
		(all->par.c_r - 0.01);
		all->par.c_i = (y < all->mlx.y_size / 2) ? (all->par.c_i + 0.01) :
		(all->par.c_i - 0.01);
		ft_redraw(all);
	}
	return (0);
}

int		ft_mouse_hook(int button, int x, int y, t_all *all)
{
	if ((button == LEFT_CLICK && all->key.click == 1) || button == MOUSE_UP)
	{
		all->key.zoom *= 1.1;
		all->par.x1 = all->par.x1 + ((double)x - ((double)all->mlx.x_size / 2))
			/ all->key.zoom;
		all->par.y1 = all->par.y1 + ((double)y - ((double)all->mlx.y_size / 2))
			/ all->key.zoom;
	}
	if ((button == RIGHT_CLICK && all->key.click == 1) || button == MOUSE_DOWN)
	{
		all->key.zoom *= 1.1;
		all->par.x1 = all->par.x1 + ((double)x - ((double)all->mlx.x_size / 2))
			/ all->key.zoom;
		all->par.y1 = all->par.y1 + ((double)y - ((double)all->mlx.y_size / 2))
			/ all->key.zoom;
	}
	ft_redraw(all);
	return (0);
}

	if (key == 15)
	{
		ft_init_keycode(all);
		ft_fractal_init(all);
	}

